<%-include("./_partials/header")-%>
<head>
    <style>
        input, textarea {
            border: 2px solid rgb(22 78 99);
            border-radius: 0.25rem;
            padding: 0.25rem;
        }
    </style>
</head>
<body>
    <main class="my-16 mx-auto w-4/5 flex flex-col justify-center items-center gap-12 text-xl">
        <h1 class="text-5xl">Form Report</h1>
        <form action="/reports/<%= data.id %>/edit" method="POST"
                class="flex flex-col gap-5 w-2/4">

            <div class="flex flex-row justify-between">
                <div class="flex flex-col gap-4">
                    <div class="flex flex-col">
                        <label for="firstName">First Name</label>
                        <input type="text" name="firstName" id="firstName"
                                value="<%=data.firstName%>">
                    </div>
                    <div class="flex flex-col">
                        <label for="lastName">Last Name</label>
                        <input type="text" name="lastName" id="lastName"
                                value="<%=data.lastName%>">
                    </div>
                    <div>
                        <label for="age">Age</label>
                        <input type="number" name="age" id="age"
                                value="<%=data.age%>">
                    </div>
                </div>
                <div class="flex justify-center items-center w-full">
                    <img src="<%= data.photo %>" class="h-full w-fit rounded-md">
                </div>
            </div>


            <div class="flex flex-col">
                <label for="email">Email</label>
                <input type="text" name="email" id="email"
                        value="<%=data.email%>">
            </div>

            <div class="flex flex-col">
                <label for="nik">NIK</label>
                <input type="text" name="nik" id="nik"
                        value="<%=data.email%>">
            </div>

            <div class="flex flex-col">
                <label for="event">Event</label>
                <input type="text" name="event" id="event"
                        value="<%=data.event%>">
            </div>

            <div class="flex flex-col">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description"
                            style="min-height: 5rem;"><%=data.description%></textarea>
            </div>

            <div class="flex flex-col">
                <label for="photo">Photo</label>
                <input type="text" name="photo" id="photo"
                        value="<%=data.photo%>">
            </div>

            <div class="flex flex-col">
                <label for="dateOfEvent">Date of Event</label>
                <input type="date" name="dateOfEvent" id="dateOfEvent"
                        value="<%=data.dateOfEventLocalized%>">
            </div>

            <input class="w-40 m-auto py-2 cursor-pointer duration-200 relative hover:bg-cyan-900 hover:text-red-100 active:top-1"
                type="submit" value="Submit">
        </form>
    </main>
</body>